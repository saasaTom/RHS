@if (Model == null)
{
<hgroup class="title">
    <h2>There has been a problem With this product. If you continue to get this problem please contact info@robynshandmadesoap.com.</h2>
</hgroup>
}
else
{
    
<hgroup class="title">
    <h2>@Model.product.Name </h2>
</hgroup>
<section>
    <div class="pdImgSect">
        <a class="pdImgLink" href="#" title="@Model.product.Name" >
            <img src="@Model.product.Image_Uri" width="340" height="270" />
        </a>
    </div>

    <div class="pdDescSect">
        <p style="margin-top:0;">
            @Html.Raw(Model.product_detail.Long_DescriptionHTML)
        </p>
        <div>
            <div class="pdPriceSect">
                Price:  &#8364;@Model.product_detail.calculatePrice(User.IsInRole("Merchant"))
            </div>

            <!-- Add to Cart Button -->
            @{ if (Model.product_detail.Stock_Quantity > 0)
               {
            <div class="pdPPSect">
                <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="hosted_button_id" value="@Model.product.PP_Button(User.IsInRole("Merchant"))">
                    <!-- Continue shopping on the main Shop Page -->  
                    <input type="hidden" name="shopping_url" value="@Request.Url.Scheme://@Request.Url.Host/Shop">  
                    <div>
                        <div style="float: left;width: 140px;">
                            <input type="hidden" name="no_note" value="0">
                            <label for="quantity">Quantity</label>
                            <select name="quantity">
                                @for (var i = 1; i <= 20; i++)
                                {

                                <option value="@i.ToString()">@i.ToString()</option>
                                }
                            </select>
                        </div>
                        <div  style="float: left;width: 130px;">
                            <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_cart_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                            <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                        </div>
                    </div>
                
                </form>

                 <!-- View Cart Button -->
                <form target="paypal" action="https://www.paypal.com/cgi-bin/webscr" method="post">
                    <input type="hidden" name="cmd" value="_s-xclick">
                    <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----
                    ">
                    <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_viewcart_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                    <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                </form>
            </div>
              }else{<!-- SOLD OUT -->
            <div class="sold_out">SOLD OUT</div>
            }
            }
        </div>
    </div>

</section>
}




